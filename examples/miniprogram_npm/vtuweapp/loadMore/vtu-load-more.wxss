@import "../assets/css/Vtu_Common.wxss";
.Vtu_LoadMore{
    position: relative;
    width: 100%;
    height: 100%;
}
.Vtu_LoadMore_Loading{
    width: 100%;
    text-align: center;
    position: relative;
    height: 30px;
    line-height: 30px;
    display: flex;
    justify-content: center;
}
.Vtu_LoadMore_Loading_Img{
    width: 30px;
    height: 30px;
}
.Vtu_LoadMore_Loading_Img image{
    width: 100%;
    height: 0;
}
.Vtu_LoadMore_Loading_Icon{
    width: 30px;
    height: 30px;
    color: var(--primary);
}
.Vtu_LoadMore_Loading_Label{
    font-size: 12px;
}
.Vtu_LoadMore_Loading_Icon.is-rotate{
    animation-name: myfirst; /*动画的名称 */
    animation-duration: 1000ms; /*动画从开始到结束的时间*/
    animation-timing-function: linear; /*动画执行快慢的参数*/
    animation-iteration-count: infinite; /*动画执行多少次的参数*//*以下是兼容ios所需，参数意义与上相同*/
    -webkit-animation-name: myfirst;
    -webkit-animation-duration: 1000ms;
    -webkit-animation-timing-function: linear;
    -webkit-animation-iteration-count: infinite;
}
.Vtu_LoadMore_Wait{
    width: 100%;
    height: 30px;
    line-height: 30px;
    color: var(--primary);
    font-size: 12px;
    text-align: center;
}

@keyframes myfirst {
    /*开始转的角度*/
    from {
        transform: rotate(0deg);
    }/*结束的角度*/
    to {
        transform: rotate(360deg);
    }
}
/*兼容ios*/
@-webkit-keyframes myfirst {
    from {
        transform: rotate(0deg);
    }
    to {
        transform: rotate(360deg);
    }
}
